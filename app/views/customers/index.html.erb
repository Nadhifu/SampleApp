<%= render "customers/heading" %>
<h1>CUSTOMERS</h1>

<table>
  <tr class=trhead>
    <th>NAME</th>
    <th>ADDRESS</th>
    <th>CITY</th>
    <th>STATE</th>
    <th>ZIPCODE</th>
    <th>SSN</th>
    <th>SEX</th>
    <th>TELEPHONE</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr class=trdetail>
    <td><%= customer.name %></td>
    <td><%= customer.address %></td>
    <td><%= customer.city %></td>
    <td><%= customer.state %></td>
    <td><%= customer.zipcode %></td>
    <td><%= customer.ssn %></td>
    <td><%= customer.sex %></td>
    <td><%= customer.telephone %></td>
    <td><%= link_to 'Show', customer %></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

